{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", /* Node folose»ôte CommonJS */
    "outDir": "./dist",   /* Aici va ajunge codul compilat */
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}